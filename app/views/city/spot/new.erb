
<div class="spot-form">
  <div class="fluid-container">
    <form class ="form-group row" method="post" action="/city/spot/new" enctype="multipart/form-data">
      <div class="col-sm-10">
         <label>Name:</label>
         <input class="form-control" type="text" name="title" value="<% @spot.title%>" placeholder="Name" >
      </div>
      <div class="col-sm-10">
         <label>Address:</label>
         <input class="form-control" type="text" name="location" value="<%@spot.location%>" placeholder="Address">
      </div>
      <div class="col-sm-10">
         <label>Description:</label>
         <input class="form-control" type="text" name="description" value="<%@spot.description%>" placeholder="Description">
      </div>
      <div class="col-sm-10">
         <label>Category:</label>
  		<div class="btn-group">
  		  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
  		    Action <span class="caret"></span>
  		  </button>
  		  <ul class="dropdown-menu">
  		    <li><a href="#">category1</a></li>
  		    <li><a href="#">category2</a></li>
  		    <li><a href="#">category3</a></li>
          <li><a href="#">category4</a></li>
          <li><a href="#">category5</a></li>
          <li><a href="#">category6</a></li>
          <li><a href="#">category7</a></li>
          <li><a href="#">category8</a></li>
          <li><a href="#">category9</a></li>
  		    <li role="separator" class="divider"></li>
  		    <li><a href="#">Separated link</a></li>
  		  </ul>
  		</div>
      <div class="col-sm-10">
        <label class="control-label">Upload Image</label>
        <input type="file" name="file">
      </div>
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-primary">
          <input type="checkbox" autocomplete="off"> Mood1
        </label>
        <label class="btn btn-primary">
          <input type="checkbox" autocomplete="off"> Mood2
        </label>
        <label class="btn btn-primary">
          <input type="checkbox" autocomplete="off"> Mood3
        </label>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Create Spot</button>
        </div>
      </div>
    </form>
  </div>
</div>
