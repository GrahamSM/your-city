<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <strong>Some issues with your info, please fix them:</strong>
    <ul>
      <% @user.errors.full_messages.each do |user| %>
        <li><%= user %></li>
        <% end %>
    </ul>
  </div>
<% end %>

<div class='signup-form'>
  <div class="fluid-container">
    <form class ="form-group row" method="post" action="/users/new">
      <div class="col-sm-10">
         <label>Username:</label>
         <input class="form-control" type="text" name="username" value="<%= @user.username %>" placeholder="Username">
      </div>
      <div class="col-sm-10">
         <label>Email:</label>
         <input class="form-control" type="text" name="email" value="<%= @user.email %>" placeholder="Email">
      </div>
      <div class="col-sm-10">
         <label>Password:</label>
         <input class="form-control" type="password" name="password" value="<%= @user.password %>" placeholder="Password">
      </div>
      <div class="col-sm-10">
         <label>Confirm Password:</label>
         <input class="form-control" type="password" name="password_confirmation" value="<%= @user.password_confirmation %>" placeholder="Confirm Password">
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
      </div>
    </form>
  </div>
</div>
